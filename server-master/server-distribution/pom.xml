<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!--
     Master pom for powertac server components. Must be
     installed/deployed first in order to successfully install or
     deploy server components. 
   -->

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.powertac</groupId>
  <artifactId>server-distribution</artifactId>
  <version>0.1.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Power TAC distribution</name>
  <description>Support for download and execution of the Power TAC server</description>
  <url>http://www.powertac.org</url>

  <!-- pull in the sonatype repo definitions for deployment -->
  <parent>
  	<groupId>org.powertac</groupId>
  	<artifactId>server-master</artifactId>
  	<version>0.1.1</version>
  	<relativePath/>
  </parent>
  
  <!-- Sonatype OSS repo for resolving snapshot dependencies -->
  <repositories>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>
    
  <dependencies>
     <dependency>
       <groupId>org.powertac</groupId>
       <artifactId>server-main</artifactId>
       <version>0.1.0</version>
       <scope>runtime</scope>
     </dependency>
  </dependencies>
  <!--
    mvn exec:exec -Dexec.executable="java" -Dexec.args="-server -Xmx1024m -classpath %classpath org.powertac.server.PowerTacServer config/bootstrap.txt"
  -->
  <build>
    <finalName>server-distribution</finalName>
    <plugins>
      <plugin>
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>exec-maven-plugin</artifactId>
      	<version>1.2.1</version>
      	<executions>
      	  <execution>
      	    <goals>
      	      <goal>exec</goal>
      	    </goals>
      	  </execution>
      	 </executions>
      	<configuration>
	  <executable>java</executable>
	  <commandlineArgs>-server -Xmx1024m -classpath %classpath org.powertac.server.PowerTacServer ${exec.args}</commandlineArgs>
	</configuration>
      </plugin>
    </plugins>
   </build>
 </project>
